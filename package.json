{
  "name": "expense-tracker",
  "scripts": {
    "dev": "concurrently -n api,web -c yellow,blue \"bun run dev:server\" \"bun run dev:client\"",
    "dev:server": "bun --bun run --hot src/index.ts",
    "dev:client": "bun run --cwd client dev",
    "db:gen": "bun run drizzle-kit generate",
    "db:push": "bun run drizzle-kit push",
    "build": "bun build src/index.ts --outdir dist",
    "start": "bun run dist/index.js",
    "d:build": "docker build -t expense-tracker .",
    "d:runp": "docker run --rm -p 0.0.0.0:3000:3000 --env-file .env expense-tracker",
    "d:run": "docker run --rm -p 3000:3000 --env-file .env expense-tracker",
    "d:dev": "docker build -t expense-tracker . && docker run --rm -p 3000:3000 --env-file .env expense-tracker",
    "cert:gen": "mkdir -p certs && openssl req -x509 -newkey rsa:4096 -keyout certs/key.pem -out certs/cert.pem -days 365 -nodes -subj '/CN=localhost'"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.3",
    "@kinde-oss/kinde-typescript-sdk": "^2.13.0",
    "@libsql/client": "^0.15.15",
    "better-auth": "^1.3.27",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.10.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "baseline-browser-mapping": "latest",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.20.6"
  }
}
